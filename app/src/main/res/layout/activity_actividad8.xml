<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_actividad8"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.jairbsena.raliuninorte.Actividad8">

    <TextView
        android:text="Username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="87dp"
        android:layout_marginStart="87dp"
        android:layout_marginTop="154dp"
        android:id="@+id/userName" />

    <Button
        android:text="Guardar reporte"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView14"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:id="@+id/button2"
        android:onClick="saveReport"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="0"
        android:ems="10"
        android:id="@+id/placesFind"
        android:layout_alignBaseline="@+id/textView12"
        android:layout_alignBottom="@+id/textView12"
        android:layout_alignRight="@+id/textView11"
        android:layout_alignEnd="@+id/textView11"
        android:layout_toRightOf="@+id/textView12"
        android:layout_toEndOf="@+id/textView12"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="0"
        android:ems="10"
        android:layout_below="@+id/placesFind"
        android:layout_toRightOf="@+id/textView13"
        android:id="@+id/pointsTotal"
        android:layout_alignRight="@+id/placesFind"
        android:layout_alignEnd="@+id/placesFind"
        android:enabled="false" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="0"
        android:ems="10"
        android:layout_below="@+id/pointsTotal"
        android:layout_toRightOf="@+id/textView14"
        android:id="@+id/timeTotal"
        android:layout_alignRight="@+id/pointsTotal"
        android:layout_alignEnd="@+id/pointsTotal"
        android:enabled="false" />

    <TextView
        android:text="Tiempo utilizado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:layout_alignBaseline="@+id/timeTotal"
        android:layout_alignBottom="@+id/timeTotal"
        android:layout_toLeftOf="@+id/pointsTotal"
        android:layout_toStartOf="@+id/pointsTotal" />

    <TextView
        android:text="Puntos Totales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:layout_alignBaseline="@+id/pointsTotal"
        android:layout_alignBottom="@+id/pointsTotal"
        android:layout_toLeftOf="@+id/placesFind"
        android:layout_toStartOf="@+id/placesFind" />

    <TextView
        android:text=" el rali ha terminado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView11"
        android:layout_above="@+id/textView12"
        android:layout_toRightOf="@+id/userName"
        android:layout_toEndOf="@+id/userName" />

    <TextView
        android:text="Lugares encontrados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:id="@+id/textView12"
        android:layout_below="@+id/userName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp" />
</RelativeLayout>
